<h1>New message</h1>

<% form_for(@message) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :Body %><br />
    <%= f.text_field :Body %>
  </p>
  <p>
    <%= f.label :To %><br />
    <%= f.text_field :To %>
  </p>
  <p>
    <%= f.label :From %><br />
    <%= f.text_field :From %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', messages_path %>
